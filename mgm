<script>
  /* Tab switching logic */
  const tabs = document.querySelectorAll('.tab-btn');
  const contents = document.querySelectorAll('.tab-content');
  tabs.forEach(btn => {
    btn.addEventListener('click', () => {
      tabs.forEach(b => b.classList.remove('active'));
      contents.forEach(c => c.classList.remove('active'));
      btn.classList.add('active');
      document.getElementById(btn.dataset.tab).classList.add('active');
    });
  });

  /* Live-score simulation logic */
  function rand(n) { return Math.floor(Math.random()*n); }
  function updateScores() {
    ['s1','s2','s3','s4'].forEach(id => {
      document.getElementById(id).textContent = `${rand(30)} - ${rand(30)}`;
      document.getElementById(id+'s').textContent = "Live ‚Ä¢ "+new Date().toLocaleTimeString();
    });
    for(let i=1;i<=11;i++){
      document.getElementById('a'+i).textContent = `Winner: Dept ${['CS','ECE','Mech','Civil','IT'][rand(5)]}`;
      document.getElementById('a'+i+'s').textContent = "Updated ‚Ä¢ "+new Date().toLocaleTimeString();
    }
    for(let i=1;i<=9;i++){
      document.getElementById('c'+i).textContent = `Score: ${rand(100)}`;
      document.getElementById('c'+i+'s').textContent = "Judging ‚Ä¢ "+new Date().toLocaleTimeString();
    }
  }
  setInterval(updateScores, 5000);
  updateScores();
</script>

